%tr{id: model_upgrade.id}
  %td.preview.text-center
    = image_tag model_upgrade.store_image.url
  %td
    = model_upgrade.name
  %td
    %ul.list-unstyled
      - model_upgrade.models.each do |model|
        %li= model.name
  %td
    - if model_upgrade.hidden?
      %i.fa.fa-check
    - else
      %i.fa.fa-square
  %td
    - if model_upgrade.active?
      %i.fa.fa-check
    - else
      %i.fa.fa-square
  %td.text-right
    .btn-group
      = link_to edit_admin_model_upgrade_path(model_upgrade), title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_model_upgrade_path(model_upgrade), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

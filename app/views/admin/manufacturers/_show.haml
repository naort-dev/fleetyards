%tr{id: manufacturer.id}
  %td.preview.text-center
    = image_tag manufacturer.logo.url if manufacturer.logo.present?
  %td
    = manufacturer.name.html_safe
  %td.text-right
    .btn-group
      = link_to edit_admin_manufacturer_path(manufacturer), 'data-turbolinks': "false", title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_manufacturer_path(manufacturer), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

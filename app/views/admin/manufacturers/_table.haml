.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th.id=sortable "id", I18n.t(:"labels.table.id")
        %th=sortable "name", I18n.t(:"labels.table.name")
        %th.actions.actions-three=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/manufacturers/show", collection: @manufacturers, as: :manufacturer

      - if @manufacturers.blank?
        = render "shared/tables/blank", count: 3, resource: "manufacturer"

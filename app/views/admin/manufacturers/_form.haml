= form_for [:admin, manufacturer] do |form|
  .row
    .col-12.col-md-6.form-group{class: form_error?(manufacturer, :name)}
      = form.label :name
      = form.text_field :name, placeholder: I18n.t(:"helpers.placeholder.name"), class: 'form-control'
      %small
        = form_errors manufacturer, :name

    .col-12.col-md-6.form-group{class: form_error?(manufacturer, :description)}
      = form.label :description
      = form.text_area :description, placeholder: I18n.t(:"helpers.placeholder.description"), class: 'form-control'
      %small
        = form_errors manufacturer, :description

    .col-12.col-md-6.form-group{class: form_error?(manufacturer, :known_for)}
      = form.label :known_for
      = form.text_field :known_for, placeholder: I18n.t(:"helpers.placeholder.manufacturer.known_for"), class: 'form-control'
      %small
        = form_errors manufacturer, :known_for

    .col-12.col-md-6.form-group{class: form_error?(manufacturer, :code)}
      = form.label :code
      = form.text_field :code, placeholder: I18n.t(:"helpers.placeholder.manufacturer.code"), class: 'form-control'
      %small
        = form_errors manufacturer, :code

    .col-12.col-md-6.form-group{class: form_error?(manufacturer, :logo)}
      = form.label :logo
      = form.file_field :logo, class: 'form-control'
      = form.hidden_field :logo_cache
      %br
      - if manufacturer.logo?
        = image_tag(manufacturer.logo.url)
        %br
        = form.check_box :remove_logo
        Remove Logo
      %small
        = form_errors manufacturer, :logo

  = render "shared/submit", path: admin_manufacturers_path

%tr{id: model_paint.id}
  %td.preview.text-center
    = image_tag model_paint.store_image.url
  %td.preview.text-center
    - if model_paint.fleetchart_image.present?
      = image_tag model_paint.fleetchart_image.url
  %td
    = model_paint.name
  %td
    - if model_paint.model.present?
      = model_paint.model.name
  %td
    - if model_paint.hidden?
      %i.fa.fa-check
    - else
      %i.fa.fa-square
  %td
    - if model_paint.active?
      %i.fa.fa-check
    - else
      %i.fa.fa-square
  %td
    = l(model_paint.created_at, format: :short)
  %td.text-right
    .btn-group
      = link_to new_admin_model_paint_path(copy_from: model_paint.id), 'data-turbolinks': "false", title: I18n.t(:"actions.copy"), class: "btn btn-dark" do
        %i.fa.fa-copy
      = link_to edit_admin_model_paint_path(model_paint), 'data-turbolinks': "false", title: I18n.t(:"actions.edit"), class: "btn btn-dark" do
        %i.fa.fa-edit
      = confirm_link_to admin_model_paint_path(model_paint), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

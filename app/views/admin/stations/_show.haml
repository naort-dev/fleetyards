%tr{id: station.id}
  %td.preview.text-center
    = image_tag station.store_image.url
  %td
    = station.name
  %td
    = station.station_type_label
  %td
    = station.celestial_object.name if station.celestial_object.present?
    = "(#{station.starsystem.name} System)" if station.starsystem.present?
    = station.location
  %td
    - if station.hidden?
      %i.fa.fa-check
    - else
      %i.far.fa-square
  %td.text-right
    .btn-group
      = link_to images_admin_station_path(station), 'data-turbolinks': "false", title: I18n.t(:"actions.station.images"), class: "btn btn-default" do
        %i.fa.fa-image
      = link_to edit_admin_station_path(station), 'data-turbolinks': "false", title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_station_path(station), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

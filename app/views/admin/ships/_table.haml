.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th.preview
        %th=sort_link(@q, :name)
        %th=sort_link(@q, :manufacturer_name, 'Manufacturer')
        %th=sort_link(@q, :ship_role_name, 'Ship Role')
        %th.actions.actions-five-ladda=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/ships/show", collection: @ships, as: :ship

      - if @ships.blank?
        = render "shared/tables/blank", count: 3, resource: "ship"

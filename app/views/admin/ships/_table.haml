.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th.preview
        %th.id=sortable "id", I18n.t(:"labels.table.id")
        %th=sortable "name", I18n.t(:"labels.table.name")
        %th=sortable "slug", I18n.t(:"labels.table.slug")
        %th=I18n.t(:"labels.table.ship.manufacturer")
        %th.actions.actions-five-ladda=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/ships/show", collection: @ships, as: :ship

      - if @ships.blank?
        = render "shared/tables/blank", count: 3, resource: "ship"

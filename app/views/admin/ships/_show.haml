%tr
  %td.preview.text-center
    = image_tag ship.store_image.small
  %td
    = ship.id
  %td
    = ship.name
  %td
    = ship.slug
  %td
    = ship.manufacturer.name.html_safe if ship.manufacturer.present?
  %td.text-right
    .btn-group
      %button.reload-ships.btn.btn-default.ladda-button{data: {style: "expand-right", action: reload_one_admin_ship_path(ship), workerPath: admin_check_worker_state_path('ShipsWorker')}, onclick: "App.Ships.reload($(this)); return false;"}
        %i.fa.fa-refresh
      %button.btn.btn-default{class: ('active' if ship.enabled?), type: "button", onclick: "App.Resources.stateChange($(this)); return false;", data: {action: toggle_admin_ship_path(ship), resource: 'ship', toggle: "button"}}
        %i.fa{class: "fa-#{(ship.enabled? ? 'check' : 'unchecked')}"}
      = link_to gallery_admin_ship_path(ship), title: I18n.t(:"actions.ship.gallery"), class: "btn btn-default" do
        %i.fa.fa-image
      = link_to edit_admin_ship_path(ship), title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_ship_path(ship), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

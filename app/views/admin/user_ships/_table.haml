.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th=sort_link(@q, :name)
        %th=sort_link(@q, :ship_name, 'Ship')
        %th=sort_link(@q, :purchased)
        %th=sort_link(@q, :updated_at)
        %th=sort_link(@q, :created_at)
        %th.actions.actions-two=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/user_ships/show", collection: @user_ships, as: :user_ship

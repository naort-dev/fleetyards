%tr{id: trade_hub.id}
  %td
    = trade_hub.name
  %td
    = trade_hub.system
  %td
    = trade_hub.planet
  %td
    = trade_hub.station_type.humanize if trade_hub.station_type.present?
  %td
    .btn-group
      = link_to edit_admin_trade_hub_path(trade_hub), title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_trade_hub_path(trade_hub), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

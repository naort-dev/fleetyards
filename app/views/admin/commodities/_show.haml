%tr{id: commodity.id}
  %td
    = commodity.name
  %td
    .btn-group
      = link_to edit_admin_commodity_path(commodity), title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_commodity_path(commodity), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th.preview
        %th.preview
        %th=sort_link(@q, :name)
        %th=sort_link(@q, :manufacturer_name, 'Manufacturer')
        %th=sort_link(@q, :focus, 'Role')
        %th.actions.actions-five-ladda=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/models/show", collection: @models, as: :model

      - if @models.blank?
        = render "shared/tables/blank", count: 3, resource: "model"

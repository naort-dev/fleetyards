= form_for [:admin, model_skin], html: { multipart: true } do |form|
  .row
    .col-xs-12.col-md-6.form-group{class: form_error?(model_skin, :name)}
      = form.label :name
      = form.text_field :name, class: 'form-control'
      %small
        = form_errors model_skin, :name
    .col-xs-12.col-md-6.form-group{class: form_error?(model_skin, :description)}
      = form.label :description
      = form.text_area :description, class: 'form-control'
      %small
        = form_errors model_skin, :description

  .row
    .col-xs-12.col-sm-6.col-md-3
      = form.label :model
      .form-group{class: form_error?(model_skin, :model_id)}
        = form.select :model_id, options_from_collection_for_select(Model.all.order(:name), :id, :name, model_skin.model_id), { include_blank: true }, { class: 'form-control' }
        = form_errors model_skin, :model_id

    .col-xs-12.col-sm-6.col-md-3
      .form-group
        = form.check_box :hidden, placeholder: I18n.t(:"helpers.placeholder.model.hidden"), class: 'checkbox'
        = form.label :hidden do
          = I18n.t(:"activerecord.attributes.model.hidden")

    .col-xs-12.col-sm-6.col-md-3
      .form-group
        = form.check_box :active, placeholder: I18n.t(:"helpers.placeholder.model.active"), class: 'checkbox'
        = form.label :active do
          = I18n.t(:"activerecord.attributes.model.active")

    .col-xs-12.col-sm-6.col-md-3.form-group{class: form_error?(model_skin, :pledge_price)}
      = form.label :pledge_price
      = form.text_field :pledge_price, class: 'form-control'
      %small
        = form_errors model_skin, :pledge_price

  .row
    .col-xs-12.col-sm-6.col-md-4.form-group{class: form_error?(model_skin, :store_image)}
      = form.label :store_image
      = form.file_field :store_image, class: 'form-control'
      = form.hidden_field :store_image_cache
      %br
      - if model_skin.store_image?
        = image_tag(model_skin.store_image.url)
        = form.check_box :remove_store_image
        Remove Image
      %small
        = form_errors model_skin, :store_image

  = render "shared/submit", path: admin_model_skins_path

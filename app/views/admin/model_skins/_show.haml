%tr{id: model_skin.id}
  %td.preview.text-center
    = image_tag model_skin.store_image.url
  %td
    = model_skin.name
  %td
    - if model_skin.model.present?
      = model_skin.model.name
  %td
    - if model_skin.hidden?
      %i.fa.fa-check
    - else
      %i.fa.fa-square
  %td
    - if model_skin.active?
      %i.fa.fa-check
    - else
      %i.fa.fa-square
  %td.text-right
    .btn-group
      = link_to edit_admin_model_skin_path(model_skin), 'data-turbolinks': "false", title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_model_skin_path(model_skin), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

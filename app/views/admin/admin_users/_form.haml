= form_for [:admin, @admin_user] do |form|
  .row
    .col-12.col-md-6.form-group{class: form_error?(@admin_user, :email)}
      = form.text_field :email, placeholder: I18n.t(:"helpers.placeholder.admin_user.email"), class: 'form-control'
      %small
        = form_errors @admin_user, :email
    .col-12.col-md-6.form-group{class: form_error?(@admin_user, :username)}
      = form.text_field :username, placeholder: I18n.t(:"helpers.placeholder.admin_user.username"), class: 'form-control'
      %small
        = form_errors @admin_user, :username


  = render "shared/submit", path: admin_admin_users_path

.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th.preview
        %th=sort_link(@q, :name)
        %th.actions.actions-five-ladda=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/shops/show", collection: @shops, as: :shop

      - if @shops.blank?
        = render "shared/tables/blank", count: 3, resource: "shop"

= form_for [:admin, equipment], html: { multipart: true } do |form|
  .row
    .col-xs-12.col-md-6.form-group{class: form_error?(equipment, :name)}
      = form.label :name
      = form.text_field :name, placeholder: I18n.t(:"helpers.placeholder.name"), class: 'form-control'
      %small
        = form_errors equipment, :name

    .col-xs-12.col-md-6.form-group{class: form_error?(equipment, :description)}
      = form.label :description
      = form.text_area :description, placeholder: I18n.t(:"helpers.placeholder.description"), class: 'form-control'
      %small
        = form_errors equipment, :description

    .col-xs-12.col-sm-6.form-group
      .checkbox
        = form.check_box :hidden, placeholder: I18n.t(:"helpers.placeholder.equipment.hidden")
        = form.label :hidden do
          = I18n.t(:"activerecord.attributes.equipment.hidden")

    .col-xs-12.col-md-6.form-group{class: form_error?(equipment, :equipment_type)}
      = form.label :equipment_type
      = form.select :equipment_type, Equipment.equipment_types.keys.map { |w| [Equipment.human_enum_name(:equipment_type, w), w] }, { include_blank: I18n.t(:"helpers.prompt.equipment.equipment_type") }, { class: 'form-control' }
      %small
        = form_errors equipment, :equipment_type

    .col-xs-12.col-md-6.form-group{class: form_error?(equipment, :store_image)}
      = form.label :store_image
      = form.file_field :store_image, class: 'form-control'
      = form.hidden_field :store_image_cache
      %br
      - if equipment.store_image?
        = image_tag(equipment.store_image.url)
        = form.check_box :remove_store_image
        Remove Image
      %small
        = form_errors equipment, :store_image

  = render "shared/submit", path: admin_equipment_index_path

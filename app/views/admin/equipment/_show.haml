%tr{id: equipment.id}
  %td.preview.text-center
    = image_tag equipment.store_image.url
  %td
    = equipment.name
  %td
    = Equipment.human_enum_name(:equipment_type, equipment.equipment_type) if equipment.equipment_type.present?
  %td
    - if equipment.hidden?
      %i.fa.fa-check
    - else
      %i.far.fa-square
  %td.text-right
    .btn-group
      = link_to edit_admin_equipment_path(equipment), 'data-turbolinks': "false", title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = link_to new_admin_equipment_path(prefill_from: equipment.id), 'data-turbolinks': "false", title: I18n.t(:"actions.copy"), class: "btn btn-default" do
        %i.fa.fa-copy
      = confirm_link_to admin_equipment_path(equipment), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

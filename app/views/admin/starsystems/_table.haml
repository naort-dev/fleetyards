.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th.preview
        %th=sort_link(@q, :name)
        %th=sort_link(@q, :hidden)
        %th.actions.actions-five-ladda=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/starsystems/show", collection: @starsystems, as: :starsystem

      - if @starsystems.blank?
        = render "shared/tables/blank", count: 4, resource: 'starsystem'

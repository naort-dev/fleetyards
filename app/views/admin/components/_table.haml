.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th=sort_link(@q, :name)
        %th=sort_link(@q, :size)
        %th=sort_link(@q, :manufacturer_name, 'Manufacturer')
        %th=sort_link(@q, :component_class, 'Class')
        %th.actions.actions-three=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/components/show", collection: @components, as: :component

      - if @components.blank?
        = render "shared/tables/blank", count: 3, resource: "component"

.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th.id=sortable "id", I18n.t(:"labels.table.id")
        %th=sortable "name", I18n.t(:"labels.table.name")
        %th=sortable "rsi_id", I18n.t(:"labels.table.rsi_id")
        %th=sortable "component_type", I18n.t(:"labels.table.component.type")
        %th=sortable "category.name", I18n.t(:"labels.table.component.category")
        %th.actions.actions-three=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "backend/components/show", collection: @components, as: :component

      - if @components.blank?
        = render "shared/tables/blank", count: 3, resource: "component"

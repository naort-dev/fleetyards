%tr{id: component.id}
  %td
    = component.name || 'Unknown'
  %td
    = component.size
  %td
    = component.component_type.capitalize if component.component_type.present?
  %td
    = component.category.name
  %td
    - if component.enabled?
      %i.fa.fa-check
    - else
      %i.fa.fa-square-o
  %td
    .btn-group
      %button.btn.btn-default{class: ('active' if component.enabled?), type: "button", onclick: "App.Resources.stateChange($(this)); return false;", data: {action: toggle_admin_component_path(component), resource: 'component', toggle: "button"}}
        %i.fa{class: "fa-#{(component.enabled? ? 'check' : 'square-o')}"}
      = link_to edit_admin_component_path(component), title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_component_path(component), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

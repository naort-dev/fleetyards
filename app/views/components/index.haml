- content_for :title do
  = I18n.t(:"title.component.#{components_type}.index")
.row#components
  .col-xs-12.col-md-12

    .row
      .col-xs-12.col-sm-6
        %h1
          = I18n.t(:"headlines.component.#{components_type}.index")
      .col-xs-12.col-sm-6
        = paginate components

    .flex-row
      - components.each do |component|
        - cache [I18n.locale, component] do
          .col-md-4.col-sm-6.col-xs-12
            = render "show", component: component

    .row
      .col-xs-12.col-md-12
        = paginate components

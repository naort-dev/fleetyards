%nav#main-nav.navbar.navbar-default{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', data: {toggle: 'collapse', target: '#main-navbar'}}
        %span.sr-only
          = I18n.t(:"nav.header.toggle")
        %span.icon-bar.top-bar
        %span.icon-bar.middle-bar
        %span.icon-bar.bottom-bar
      %a.navbar-brand{href: root_path}
        = I18n.t(:"title.default")

    .collapse.navbar-collapse#main-navbar
      = render "layouts/nav"
      = render "layouts/user_nav"

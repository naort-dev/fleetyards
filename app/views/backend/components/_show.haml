%tr
  %td
    = component.id
  %td
    = component.name
  %td
    = component.rsi_id
  %td
    = component.component_type.capitalize
  %td
    = component.category.name
  %td
    .btn-group
      %button.btn.btn-default{class: ('active' if component.enabled?), type: "button", onclick: "App.Resources.stateChange($(this)); return false;", data: {action: toggle_backend_component_path(component), resource: 'component', toggle: "button"}}
        %i.fa{class: "fa-#{(component.enabled? ? 'check' : 'square-o')}"}
      = link_to edit_backend_component_path(component), title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to backend_component_path(component), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash

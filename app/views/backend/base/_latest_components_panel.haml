.panel.panel-default
  .panel-heading
    %h2.panel-title
      = I18n.t(:"labels.panels.latest_components")
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th= I18n.t(:"labels.table.name")
          %th= I18n.t(:"labels.table.component.category")
          %th= I18n.t(:"labels.table.updated_at")
          %th.actions.actions-one
      %tbody
        - Component.unscoped.order(updated_at: :desc).limit(5).each do |component|
          %tr
            %td
              = component.name
            %td
              = component.category.name
            %td
              = I18n.t(:"activerecord.attributes.updated_at", time: time_ago_in_words(component.updated_at))
            %td
              .btn-group
                = link_to edit_backend_component_path(component), title: I18n.t(:"actions.edit"), class: "btn btn-default" do
                  %i.fa.fa-edit

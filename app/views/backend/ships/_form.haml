= form_for [:backend, ship], html: { multipart: true } do |form|
  .row
    .col-xs-12.col-md-6.form-group{class: form_error?(ship, :name)}
      = form.text_field :name, placeholder: I18n.t(:"helpers.placeholder.name"), class: 'form-control'
      %small
        = form_errors ship, :name

    .col-xs-12.col-md-6.form-group{class: form_error?(ship, :store_image)}
      - if ship.store_image?
        = image_tag(ship.store_image.small)
        = form.check_box :remove_store_image
        Remove Image
      - else
        = form.file_field :store_image, class: 'form-control'
        = form.hidden_field :store_image_cache
      %small
        = form_errors ship, :store_image

  = render "shared/submit", path: backend_ships_path
